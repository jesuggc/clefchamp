<!DOCTYPE html>
<html lang="es">
  <%-include('partials/head') %>
  <body class="colorNuevo5">
    <%-include('partials/headerLogo') %>
    <div class="vh-90 d-flex align-items-center ">
      <div id="mainDiv" class="bg-15 mx-auto rounded-4 p-4" style="max-width: 30em;">
        <h1 class="my-4 mb-5 text-center">Inicio de sesión</h1>
        <form>
          <div class="form-floating my-4">
            <input type="text" class="form-control" name="email" id="email" placeholder=" ">
            <label for="email">Correo o alias</label>
            <div class="invalid-feedback">
              Correo o alias no existente
            </div> 
          </div>
          
          <div class="input-group mt-4">
            <div class="form-floating">
                <input id="password" type="password" name="contrasena" class="form-control" placeholder="Password">
                <label for="password">Contraseña</label>
            </div>
            <button id="togglePassword" class=" bg-40 border-0" style="border-radius: 0 10px 10px 0;" type="button" >Mostrar</button>
          </div>
          <div id="invalidMessage" class="myInvalidFeedback mb-4" hidden>
              Contraseña incorrecta
          </div>
        
          <input id="login" class="acceptButton-lg w-100 my-4" type="submit" value="Iniciar sesión">
          <div class="row mt-4 ms-3">
              <span style="position:relative; bottom: 0;"> ¿No tienes una cuenta? <a href="/users/register">Registrate</a></span>
          </div>
        </form>
      </div>
    </div>
  </body>
  <script src="/javascripts/validateLogin.js"></script>
  <script>
    $("#togglePassword").on("mousedown", function() {
        $("#password").attr("type", "text");
    });
    $("#togglePassword").on("mouseup", function() {
        $("#password").attr("type", "password");
    });
  </script>
</html>
