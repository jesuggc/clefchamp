<!DOCTYPE html>
<html lang="es">
<%-include('partials/head') %>
  <body class="colorNuevo5">
    <%-include('partials/headerLogo') %>
    <div class="vh-90 d-flex align-items-center">
      <div class="bg-15 col-lg-6 mx-auto rounded-4 pt-4 px-4 my-2 scrollable">
        <h1 class="text-center">Registro</h1>
        <form id="myForm" enctype="multipart/form-data">
          <div class="row">
            <div class="col">
              <div class="form-floating my-4">
                <input id="name" type="text" class="form-control" name="nombre" placeholder="" required tabindex="1">
                <label for="email">Nombre</label>
                <div id="nameCheck" class="invalid-feedback">
                  
                </div> 
              </div>
            </div>
            <div class="col">
              <div class="form-floating my-4">
                <input id="tagname" type="text" class="form-control" name="alias" placeholder="" required>
                <label for="email">Alias</label>
                <div id="tagCheck" class="invalid-feedback">
                  
                </div> 
              </div>
            </div>
          </div>
          <!--CORREO-->
          <div class="row">
            <div class="col">
              <div class="form-floating my-4">
                <input id="email" type="text" class="form-control" name="email" placeholder="" required>
                <label for="email">Correo</label>
                <div class="invalid-feedback">
                  Correo o alias no existente
                </div> 
              </div>
            </div>
          </div>
          <!--CONTRASEÑA-->
          <div class="row">
            <div class="col">

              <div class="input-group mt-4">
                <div class="form-floating">
                  <input id="password" type="password" name="contrasena" class="form-control" placeholder="Password">
                  <label for="password">Contraseña</label>
                </div>
                <button id="togglePassword" class="bg-15 border-0" style="border-radius: 0 10px 10px 0;" type="button" tabindex="-1">Mostrar</button>
              </div>
              <div id="invalidMessage" class="myInvalidFeedback mb-4" hidden>
                Contraseña incorrecta
              </div>
            </div>
            <div class="col">

              <div class="input-group mt-4">
                <div class="form-floating">
                  <input id="confirmPassword" type="password" name="contrasenaConf" class="form-control" placeholder="">
                  <label for="password">Confirmar contraseña</label>
                </div>
                <button id="toggleConfirmPassword" class="bg-15 border-0" style="border-radius: 0 10px 10px 0;" type="button" tabindex="-1">Mostrar</button>
              </div>
              <div id="invalidMessage" class="myInvalidFeedback mb-4" hidden>
                Contraseña incorrecta
              </div>
            </div>
          </div>
          <!--BOTON-->
          <div class="row d-flex my-4 justify-content-center">
            <input id="register" class="w-50 acceptButton-lg my-3 " type="button" value="Crear cuenta" tabindex="6">
          </div>
        </form>
      </div>

      <button id="modalLaunch" hidden type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"></button>
      
      <div id="exampleModal" class="modal fade" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm  modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header ">
              <h1 id="exampleModalLabel" class="modal-title fs-5 text-center">Registro</h1>
            </div>
            <div class="modal-body">
              <p>La cuenta ha sido creada con éxito</p>
            </div>
            <div class="modal-footer">
              <a href="/"><button type="button" class="btn btn-primary">Entendido</button></a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
      $("#togglePassword").on("mousedown", function() {
        $("#password").attr("type", "text");
      });
      $("#togglePassword").on("mouseup", function() {
          $("#password").attr("type", "password");
      });
      $("#toggleConfirmPassword").on("mousedown", function() {
        $("#confirmPassword").attr("type", "text");
      });
      $("#toggleConfirmPassword").on("mouseup", function() {
          $("#confirmPassword").attr("type", "password");
      });
    </script>
    <script src="/javascripts/validateRegister.js"></script>
  </body>
</html>