<!DOCTYPE html>
<html lang="es">
  <%-include('partials/head') %>
  <body class="colorNuevo5">
    <%-include('partials/header') %>
    <% if(!user) { %>
    <div class="d-flex align-items-center justify-content-center vh-90" id="mainContent">
      <div>
        <h1 class="text-center" style="font-size: 14em;color: #1E0126;">Clefchamp</h1>
        <h2 class="text-center"> Plataforma de aprendizaje musical mediante gamificación</h2>
        <div class="d-flex justify-content-center mt-5">
          <a href="/play/atrapado/trial"><button class="cancelButton me-5">Prueba de nivel</button></a>
          <a href="/loading?redirect=/moreInformation"><button class="acceptButton">Saber más</button></a>
        </div>
      </div>
    </div>
    <% } else { %>  
    <div class="vh-90" id="mainContent">
      <div class="bg-secondary rightRounded row" style="width:40%">
        <div class="col">
          <div class="rightRounded justify-content-end mt-3 pt-2 pb-2 pe-4 d-flex " style="width:60%; background-color: white;">
            <h3><%=user.name%></h3>
          </div>
          <div class="d-flex justify-content-end pt-3 text-white" style="width:75%;">
            <span><%=user.experience%>/<%=user.experience + user.experienceToNext%></span>
          </div>
          <div class="progress" style="border-radius: 0 2em 2em 0 ; width:85%;height:3em" role="progressbar" aria-label="Success striped example" aria-valuenow="<%=user.experience+30%>" aria-valuemin="0" aria-valuemax="<%=user.experience + user.experienceToNext%>">
            <div id="levelBar" class="progress-bar bg-success slider overflow-visible text-dark" style="width: '<%=((user.experience)/(user.experience + user.experienceToNext))*100%>%'" >
              <h3 id="levelText" class="ps-5 pt-1">Nivel <span><%=user.level%></span></h3>
            </div>
          </div>
        </div>
        <div class="col-3 d-flex align-items-center justify-content-center">
          <img src="/images/<%=user.icon%>" class="rounded-circle mb-1 mt-1 me-2" style="max-height: 10em;">
        </div>
      </div>
      <div class="d-flex justify-content-center m-5">
        <a href="/play/selectGame"><button class="cancelButton me-5">Jugar</button></a>
      </div>
        <!-- ----- -->
      <audio id="audio" ></audio>
      <div class="w-100 bg-white d-flex justify-content-center" style="position: absolute; bottom: 1em" >
        <div class="col ps-4 d-flex align-items-start flex-column justify-content-center">
          <div class="row">
            <h2 id="songTitle">Song Title</h2>
          </div>
          <div class="row">
            <h4 id="songArtist">Song Artist</h4>
            </div>
        </div>
        <div class="col">
          <div class="row mx-4 px-4 pt-4">
            <div class="col">
              <img id="prevBtn" src="/images/icons/skip-previous.svg" class="musicIcons">
            </div>
            <div class="col">
              <img id="rewindBackBtn" src="/images/icons/rewind-5-back.svg" class="musicIcons">
            </div>
            <div class="col">
              <img id="playPauseBtn" src="/images/icons/play.svg" class="musicIcons">
            </div>
            <div class="col">
              <img id="rewindForwardBtn" src="/images/icons/rewind-5-forward.svg" class="musicIcons">
            </div>
            <div class="col">
              <img id="nextBtn" src="/images/icons/skip-next.svg" class="musicIcons">
            </div>
          </div>
          <div class="row py-3">
            <input class="musicControl" type="range" id="progressBar" value="0" step="1" max="100">
          </div>
        </div>
        <div class="col">
          <input class="musicControl" type="range" id="volumeControl" value="33" step="1" max="100">
        </div>
      </div>
        <!-- ----- -->
    </div>
    <% } %>
    <%-include('partials/footer') %>
    <script src="/javascripts/musicPlayer.js"></script>
    <script>
      // Configurar la recarga cada 5 segundos (5000 ms)
      // setInterval(() => {
      //   window.location.reload();
      // }, 1500);
    </script>
  </body>
</html>