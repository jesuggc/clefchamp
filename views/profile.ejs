<!DOCTYPE html>
<html lang="es">
  <%-include('partials/head') %>
  <body class="colorNuevo5">
    <%-include('partials/header') %>
    <div class="row d-flex">
      <div class="col-4 vh-90 px-4 scrollable container-fluid" >
        <div class="purpleCard rounded-4 p-4 mx-1 mb-1  text-center d-flex flex-column align-items-center ">
          <div class="rounded-circle svgIcons profileIcon" style="background-image: url('/images/<%=locals.user.icon%>'); "></div>
          <div class="rounded-circle svgIcons editIcon" style="background-image: url('/images/editIcon.svg'); "></div>
          <h3 class="mt-3"><%=locals.user.name%></h3>
          <h3>Nivel <%=locals.user.level%></h3>
          <div id="profileProgress" class="progress rounded-5 w-100" role="progressbar" aria-label="Success striped example" aria-valuenow="<%=user.experience%>" aria-valuemin="0" aria-valuemax="<%=user.experience + user.experienceToNext%>">
            <% let progress = ((user.experience)/(user.experience + user.experienceToNext))*100 %>
            <div id="levelBar" class="progress-bar bg-success slider overflow-visible text-dark" style="width: <%=progress%>%" >
              <span id="levelText" class="ps-5"><%=locals.user.experience%>/<%=(locals.user.experience+locals.user.experienceToNext) %></span>
            </div>
          </div>
        </div>
        <div class="purpleCard rounded-4 p-4 m-1 text-center">
            <h3>Te uniste el:</h3>
            <h5><%=locals.user.joindate.day%>/<%=locals.user.joindate.month%>/<%=locals.user.joindate.year%></p>
        </div>
        <div class="row purpleCard rounded-4 p-4 m-1 text-center d-flex align-items-center justify-content-center">
          <div class="col-6 d-flex flex-column  ">
            <div class="row">
              <h3>Codigo de amigo</h3>
            </div>
            <div class="row">
              <h5 id="friendCode"><%=locals.user.friendCode%></h5>
            </div>
          </div>
          <div class="col-2 d-flex align-items-center justify-content-center ">
            <a id="copyFriendCode" class="cursorPointer;"><img src="/images/copy.svg" class="friendCodeImg"></a>
          </div>
        </div>
        <div class="purpleCard rounded-4 p-4 m-1 text-center">
          <h3>Amigo del alma</h3>
          <%# if (tiene amigo) %>
          <h5> Id del amigo</h5>
          <%# else %>
          <input type="text"></input>
        </div>
      </div>
      <div class="col-8 vh-85 scrollable container-fluid">
        <h1 class="rounded-4">Mejores partidas</h1>
        <div class="row mx-5">
          <div class="col my-4 text-center pt-3 secondPlaces" style="background-color: #C0BEBE; border-radius: 2em 2em 0 0;">
            <div class="row rounded-5 p-2 bg-white mx-1">
                <img src="/images/crown.svg" class="crownImg">
                <h1><%=topRecords[1].points%> ptos.</h1>
                <h2><%=topRecords[1].time.day%>-<%=topRecords[1].time.month%>-<%=topRecords[1].time.year%></h2>
                <h2>Atrapa-do</h2>
                <h4><%=topRecords[1].difficulty%></h4>
            </div>
            <div class="row my-2 p-1">
              <h1>2ยบ</h1>
            </div>
          </div>
          <div class="col my-4 text-center pt-3" style="background-color: #EBD244; border-radius: 2em 2em 0 0;">
            <div class="row rounded-5 p-2 bg-white mx-1">
                <img src="/images/crown.svg" class="crownImg">
                <h1><%=topRecords[0].points%> ptos.</h1>
                <h2><%=topRecords[0].time.day%>-<%=topRecords[0].time.month%>-<%=topRecords[0].time.year%></h2>
                <h2>Atrapa-do</h2>
                <h4><%=topRecords[0].difficulty%></h4>
            </div>
            <div class="row my-2 p-1">
              <h1>1ยบ</h1>
            </div>
          </div>
          <div class="col my-4 text-center pt-3 secondPlaces" style="background-color: #B75D0E; border-radius: 2em 2em 0 0;">
            <div class="row rounded-5 p-2 bg-white mx-1">
                <img src="/images/crown.svg" class="crownImg">
                <h1><%=topRecords[2].points%> ptos.</h1>
                <h2><%=topRecords[2].time.day%>-<%=topRecords[2].time.month%>-<%=topRecords[2].time.year%></h2>
                <h2>Atrapa-do</h2>
                <h4><%=topRecords[2].difficulty%></h4>
            </div>
            <div class="row my-2 p-1 " style="background-color: #B75D0E;">
              <h1>3ยบ</h1>
            </div>
          </div>
        </div>
        <h1 class="rounded-4">Historial</h1>
        <% for(let i = 0; i < records.length; i ++) { %>
          <div class="row bg-white rounded-4 m-1 px-2">
            <div class="col">
              <div class="row">
                <div class="col pt-4 d-flex align-items-center">
                  <h3>Atrapa-do</h3>
                </div>
                <div class="col">
                  <div class="row">
                    <h5 class="text-center"><span class="display-1"><%=records[i].points%></span> ptos.</h5>
                  </div>
                </div>
                <div class="col">
                  <div class="row">
                    <span class="fs-3 text-end"><%=records[i].time.day%>-<%=records[i].time.month%>-<%=records[i].time.year%></span>
                  </div>
                  <div class="row">
                    <span class="fs-5 text-end"><%=records[i].time.hour%>:<%=records[i].time.minutes%></span>
                  </div>
                </div>
              </div>
              <% let color = "bg-success"; if (records[i].difficulty === "NORMAL") color= "bg-info"; if(records[i].difficulty === "HARD") color="bg-danger"; %> 
              <div class="row d-flex <%=color%> my-1 rounded-4">
                <div class="col-4 d-flex justify-content-center"></div>
                <div class="col-4 d-flex justify-content-center"><span class="fs-5"><%=records[i].difficulty%></span></div>
                <div class="col-4 d-flex justify-content-end align-items-center"><span>ID de partida: <%=records[i].gameId%></span></div>
              </div>
            </div>
          </div>
          <% } %>
      </div>
    </div>  
    <%-include('partials/footer') %>

    <div id="exampleModal" class="modal" tabindex="-1">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Modal title</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div id="mainCol" class="col">

            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
  <script src="/javascripts/clipboard.js"></script>
  <script>
    $(".svgIcons").on("click", function(){
      $("#exampleModal").modal("show")

      $.ajax({
        url: "/application/getIcons",
        type: "GET",
        success: function(response) {
            if(!response) console.log("Sin response vamos bien")
            else {
              let size = response.length
              let rows = size / 4;
              let cols = size % 4;
                $("#mainCol").empty()
                for(let i = 0; i < rows; i++) {
                  let $row = $('<div class="row gap-1"></div>');
                    for (let j = i; j < i + 4 && j < response.length; j++) {
                      let $col = $(`
                        <div class="col bg-success p-4 rounded-circle ">
                          <img src="/images/svg/${response[j].path}" class="rounded-circle svgProfile"> 
                        </div>
                      `);
                      $row.append($col);
                    }
                  $("#mainCol").append($row)
                }
            }
        },
        error: function(jqXHR, textStatus, errorThrown) {
            console.log(textStatus, errorThrown);
        }
      })

    })
    // setInterval(() => {
    //   window.location.reload();
    // }, 1500);
  </script>
  </body>
</html>