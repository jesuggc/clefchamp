<!DOCTYPE html>
<html lang="es">
  <%-include('partials/head') %>
  <body class="colorNuevo5">
    <%-include('partials/header') %>
    <div class="vh-90 container-fluid p-4">
      <div class="row g-4">
        <!-- Left Column - Game Selection -->
        <div class="col-12 col-lg-4">
          <div class="d-flex flex-column gap-4">
            <div class="bg-15 rounded-4 p-4">
              <h2 class="text-center mb-0">Elige un juego</h2>
            </div>
            
            <!-- Easy Mode -->
            <div class="game-option">
              <button id="easyBtn" class="gameSelectors py-4 w-100 hover-effect">
                Atrapa-do
              </button>
              <div class="bg-15 text-center levelDifficulty w-75 mx-auto">
                <span class="fs-5">Fácil</span>
              </div>
            </div>

            <!-- Normal Mode -->
            <div class="game-option">
              <button id="normalBtn" class="gameSelectors py-4 w-100 hover-effect">
                Atrapa-do
              </button>
              <div class="bg-15 text-center levelDifficulty w-75 mx-auto">
                <span class="fs-5">Normal</span>
              </div>
            </div>

            <!-- Hard Mode -->
            <div class="game-option">
              <button id="hardBtn" class="gameSelectors py-4 w-100 hover-effect">
                Atrapa-do
              </button>
              <div class="bg-15 text-center levelDifficulty w-75 mx-auto">
                <span class="fs-5">Difícil</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Column - Game Preview -->
        <div class="col-12 col-lg-8">
          <div class="d-flex flex-column gap-4">
            <!-- Game Image -->
            <div class="bg-15 rounded-4 p-4 game-preview">
              <img id="gameImage" class="game-image" alt="">
            </div>

            <!-- Game Description -->
            <div class="bg-15 rounded-4 p-4 game-description">
              <div id="descriptionDiv" class="scrollable">
              </div>
            </div>

            <!-- Play Button -->
            <div>
              <a id="playLink" class="d-block">
                <button id="playBtn" class="acceptButton w-100">
                  Jugar
                </button>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%-include('partials/footer') %>
    <script src="/javascripts/selectGame.js"></script>
  </body>
</html>