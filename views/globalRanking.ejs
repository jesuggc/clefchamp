<!DOCTYPE html>
<html lang="es">
  <%-include('partials/head') %>
  <body class="colorNuevo5">
    <%-include('partials/header') %>
    <div class="row d-flex">
      <div class="col scrollable container-fluid vh-90 mx-5">
        <div class="row bg-15 rounded-4 mx-1 px-2">
          <h1 id="easyBtn" class="col mx-5 text-center cursorPointer" style="margin-bottom: 0;">FÃ¡cil</h1>
          <h1 id="normalBtn" class="col mx-5 text-center cursorPointer" style="margin-bottom: 0;">Normal</h1>
          <h1 id="hardBtn" class="col mx-5 text-center cursorPointer" style="margin-bottom: 0;">Dificil</h1>
        </div>
        <% for (let i = 0; i < easyRes.length; i++) { %>
          <div class="row bg-15 rounded-4 mx-1 mt-1 px-2 easyDiv">
            <div class="col-1 d-flex ">
              <h1 class="my-auto bg-15 rounded-4 p-3 px-4"><%=i+1%>.</h1>
            </div>
            <div class="col-1 d-flex ">
              <img src="/images/<%=easyRes[i].icon%>" style="max-width: 5em; max-height: 5em;" class="rounded-circle my-auto">
            </div>
            <div class="col-2 d-flex ">
              <div class="my-auto">
                <h1><%=easyRes[i].tagname%><h1>
                <h4><%=easyRes[i].friendCode%><h4>
              </div>
            </div>
            <div class="col">
              <div class="row">
                <div class="col pt-4 d-flex align-items-center">
                  <h3>Atrapa-do</h3>
                </div>
                <div class="col">
                  <div class="row">
                    <h5 class="text-center"><span class="display-1"><%=easyRes[i].points%></span> ptos.</h5>
                  </div>
                </div>
                <div class="col">
                  <div class="row">
                    <span class="fs-3 text-end align-items-center"><%=easyRes[i].time.day%>-<%=easyRes[i].time.month%>-<%=easyRes[i].time.year%></span>
                  </div>
                </div>
              </div>
              <div class="row d-flex my-1 rounded-4">
                <div class="col-4 d-flex justify-content-center"></div>
              </div>
            </div>
          </div>
        <%}%>
        <% for (let i = 0; i < normalRes.length; i++) { %>
          <div class="row bg-15 rounded-4 mx-1 mt-1 px-2 normalDiv" hidden>
            <div class="col-1 d-flex ">
              <img src="/images/<%=normalRes[i].icon%>" style="max-width: 5em; max-height: 5em;" class="rounded-circle my-auto">
            </div>
            <div class="col-2 d-flex ">
              <div class="my-auto">
                <h1><%=normalRes[i].tagname%><h1>
                <h4><%=normalRes[i].friendCode%><h4>
              </div>
            </div>
            <div class="col">
              <div class="row">
                <div class="col pt-4 d-flex align-items-center">
                  <h3>Atrapa-do</h3>
                </div>
                <div class="col">
                  <div class="row">
                    <h5 class="text-center"><span class="display-1"><%=normalRes[i].points%></span> ptos.</h5>
                  </div>
                </div>
                <div class="col">
                  <div class="row">
                    <span class="fs-3 text-end"><%=normalRes[i].time.day%>-<%=normalRes[i].time.month%>-<%=normalRes[i].time.year%></span>
                  </div>
                  <div class="row">
                    <span class="fs-5 text-end"><%=normalRes[i].time.hour%>:<%=normalRes[i].time.minutes%></span>
                  </div>
                </div>
              </div>
              <div class="row d-flex my-1 rounded-4">
                <div class="col-4 d-flex justify-content-center"></div>
              </div>
            </div>
          </div>
        <%}%>
        <% for (let i = 0; i < hardRes.length; i++) { %>
          <div class="row bg-15 rounded-4 mx-1 mt-1 px-2 hardDiv" hidden>
            <div class="col-1 d-flex ">
              <img src="/images/<%=hardRes[i].icon%>" style="max-width: 5em; max-height: 5em;" class="rounded-circle my-auto">
            </div>
            <div class="col-2 d-flex ">
              <div class="my-auto">
                <h1><%=hardRes[i].tagname%><h1>
                <h4><%=hardRes[i].friendCode%><h4>
              </div>
            </div>
            <div class="col">
              <div class="row">
                <div class="col pt-4 d-flex align-items-center">
                  <h3>Atrapa-do</h3>
                </div>
                <div class="col">
                  <div class="row">
                    <h5 class="text-center"><span class="display-1"><%=hardRes[i].points%></span> ptos.</h5>
                  </div>
                </div>
                <div class="col">
                  <div class="row">
                    <span class="fs-3 text-end"><%=hardRes[i].time.day%>-<%=hardRes[i].time.month%>-<%=hardRes[i].time.year%></span>
                  </div>
                  <div class="row">
                    <span class="fs-5 text-end"><%=hardRes[i].time.hour%>:<%=hardRes[i].time.minutes%></span>
                  </div>
                </div>
              </div>
              <div class="row d-flex my-1 rounded-4">
                <div class="col-4 d-flex justify-content-center"></div>
              </div>
            </div>
          </div>
        <%}%>
      </div>
    </div>  
    <%-include('partials/footer') %>
  <script src="/javascripts/clipboard.js"></script>
  <script src="/javascripts/ranking.js"></script>
  </body>
</html>