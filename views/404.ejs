<!DOCTYPE html>
<html lang="es">
  <%-include('partials/head')%>
  <% function randomPastelColor() {
    const r = Math.floor(Math.random() * 106) + 150;
    const g = Math.floor(Math.random() * 106) + 150;
    const b = Math.floor(Math.random() * 106) + 150;   

      return `#${r.toString(16).padStart(2, '0')}${g.toString(16).padStart(2, '0')}${b.toString(16).padStart(2, '0')}`;
  }%>
  <body style="background-color: <%=randomPastelColor()%>">
    <%-include('partials/headerLogo')%>
    <div class="d-flex align-items-center flex-column justify-content-center vh-90 px-3">
      <h1 class="pb-4 text-center fs-1 fs-md-2 fs-lg-3">Desde Clefchamp no lo podemos creer</h1>
      <% let random = Math.floor(Math.random() * 20) + 1; %>
      <img src="/images/1600w/404error-<%= random %>.png" class="error404Img img-fluid" style="max-width: 100%; height: auto;" alt="Imagen de error 404">
      <h1 class="pt-4 text-center fs-2 fs-md-3 fs-lg-4">La página no aparece por ningún sitio</h1>
      <h3 class="text-center fs-3 fs-md-4 fs-lg-5">Error 404</h3>
    </div>
    <%-include('partials/footer')%>
  </body>
</html>
